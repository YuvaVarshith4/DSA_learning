#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter n: ";
    cin >> n;

    int num = 1;

    for (int i = 1; i <= n; i++) {
        if (i % 2 != 0) {
            for (int j = 1; j <= n; j++) {
                cout << num << " ";
                num++;
            }
        } else {
            int temp = num + n - 1;
            for (int j = 1; j <= n; j++) {
                cout << temp << " ";
                temp--;
                num++;
            }
        }
        cout << endl;
    }

    return 0;
}
// example output:
//1 2 3 4 
//8 7 6 5 
//9 10 11 12 
//16 15 14 13 
