#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    for(int i = 0;i<n;i++){
        for(int j = i; j<n-1;j++){
            cout<<"    ";
        }
        for(int k =0; k<(2*i+1);k++){  
           if(k==0 || k == 2*i || i == n-1){
            cout<<" "<<"0 "<<" ";
           }    
           else{
            cout<<" "<<"1 "<<" ";
           }
        }
        cout<<endl;
    }
    return 0;
}
