#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int count =1;
    for(int i = 0;i<n;i++){
        for(int j = 0; j<=i;j++){
            if(count%2==0){
                cout<<"0 ";
            }
            else{
                cout<<"1 ";
            }
            count++;
        }
        cout<<endl;
    }
    return 0;
}
