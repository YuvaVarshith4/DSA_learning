#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int num = 0;
    for(int i = 1;i<=n;i++){
        for(int j = n-i; j>=1;j--){
            cout<<"   ";
        }
        for(int k =1; k<=i;k++){
          if(k==1 || k==i || i==n){
            cout<<" "<<"0 ";
          }
          else{
            cout<<" "<<"1 ";
          }  
     }
        cout<<endl;
    }
    return 0;
}
