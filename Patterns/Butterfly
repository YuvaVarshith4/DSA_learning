#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin >> n;
    for (int i = 0; i < n; i++)
    {
            int num = 0;
            for (int j = 0; j<= i; j++)
            {
                cout << "*";
            }
            for (int j = 0; j < 2 * (n - i) - 2; j++)
            {
                cout << " ";
            }
            for (int j = 0; j <= i; j++)
            {
                cout << "*";
            }
            num++;
        
        cout << endl;
    }
    for (int i = n - 1; i >= 0; i--)
    {
            int num = 0;
            for (int j = 0; j <= i; j++)
            {
                cout << "*";
            }
            for (int j = 0; j < 2 * (n - i) - 2; j++)
            {
                cout << " ";
            }
            for (int j = 0; j <= i; j++)
            {
                cout << "*";
            }
            num++;
        
        cout << endl;
    }
    return 0;
}
